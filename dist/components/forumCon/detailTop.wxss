.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #F0F4F3;
}
.container.withtab {
  margin: 105rpx 0 0 0;
  /*top: 105rpx;*/
}
.flex-wrp {
  display: flex;
}
.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}
.flex-item {
  flex-grow: 1;
  text-align: center;
}
.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}
.toptab.active {
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.container {
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}
.container .feed-item .feed-source {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}
.container .feed-item .feed-source a {
  display: inline-block;
  height: 40rpx;
}
.container .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item .feed-source text {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}
.container .feed-item .feed-source .item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}
.container .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}
.container .feed-item .feed-content .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}
.container .feed-item .feed-content .answer-body {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}
.container .feed-item .feed-content .answer-actions {
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}
.container .feed-item .feed-content .answer-actions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}
.container .feed-item .feed-content .answer-actions .dot ::after {
  content: "â€¢";
}
.container {
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}
.forum-detail-top {
  position: relative;
  width: 100%;
  padding: 40rpx 50rpx 30rpx;
  background: #298DE5;
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}
.author-wrp {
  position: relative;
  width: 750rpx;
  height: 150rpx;
  background: #fff;
}
.author-wrp .bg-half {
  width: 750rpx;
  height: 75rpx;
  background: #298DE5;
}
.author {
  position: relative;
  margin: 0 auto;
  width: 94%;
  height: 180rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #ebebeb;
  border-radius: 3px;
  box-shadow: 0 1px 2px #bebebe;
  margin-top: -20rpx;
}
.author .avatar {
  flex: 1;
  width: 90rpx;
  height: 90rpx;
}
.author .avatar image {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}
.author .author-info {
  flex: 5;
  text-align: left;
  padding: 10rpx 20rpx;
  line-height: 38rpx;
}
.author .author-info text {
  display: block;
}
.author .author-info .author-name {
  font-size: 32rpx;
}
.author .author-info .author-des {
  font-size: 22rpx;
  color: #808080;
  line-height: 28rpx;
}
.author-des {
  width: 300rpx;
}
.author .follow {
  flex: 2;
  padding: 15rpx 0;
  font-size: 22rpx;
  right: 50rpx;
  position: absolute;
  top: 25rpx;
}
.author .follow text {
  display: inline-block;
  padding: 15rpx 20rpx;
  color: #40bcd0;
  border: solid 2px #40bcd0;
  border-radius: 6rpx;
}
.author {
  margin-top: -80rpx;
}
.content-content {
  padding: 30rpx 40rpx;
  background: #ffffff;
}
.content-content text {
  font-size: 32rpx;
  color: #454545;
  line-height: 44rpx;
}
.content-content image {
  width: 100%;
  margin: 20rpx 0;
}
.content-footer {
  position: fixed;
  bottom: 0;
  height: 70rpx;
  border-top: solid 1px #ebebeb;
  background: #ffffff;
  width: 100%;
  padding: 20rpx 40rpx;
}
.content-footer .good {
  flex: 1;
  /*display: inline-block;*/
  height: 40rpx;
  border: solid 1px #d1d1d1;
  border-radius: 3px;
  padding: 10rpx 8rpx;
  margin: 10rpx 0;
}
.content-footer .good .good-bad {
  display: inline-block;
}
.content-footer .good image {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
}
.content-footer .good .good-num {
  display: inline-block;
  padding: 10rpx 4rpx;
  /*font-size: 24rpx;*/
}
.content-footer .operation-wrp {
  flex: 5;
}
.content-footer .operation {
  justify-content: space-between;
  padding: 0 0 0 60rpx;
}
.content-footer .operation-btn {
  flex: 1;
  text-align: center;
}
.content-footer .operation image {
  display: block;
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
}
.content-footer .operation-btn text {
  display: block;
  font-size: 20rpx;
  color: #bebebe;
}
.content-footer {
  height: 100rpx;
}
.toleft {
  margin-left: -30rpx;
